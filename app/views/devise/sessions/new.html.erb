<h2 class="text-center text-xxl gray-900">Sign in to your account</h2>
<section class="section-sm flex-center flex">
  <div class="flex flex-center flex-column container-sm session-card">
    <div class="flex-column flex-center w-full">
      <p>CONTINUE WITH</p>
    </div>
    <div class="w-full flex flex-column flex-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => 'login-form'}) do |f| %>
        <div class="login-form mb-1">
          <%= f.label :email, "EMAIL" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com" %>
        </div>

        <div class="login-form">
          <%= f.label :password, "PASSWORD" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "********" %>
        </div>

        <div class="my-1">
          <%= f.submit "SIGN IN", class: "button button--primary w-full regular" %>
        </div>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class="flex flex-column flex-center mt-1">
            <span>Don't have an account?</span>
            <%= link_to "Create an account", new_registration_path(resource_name), class: "pink-link" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
